<%= render "shared/header" %>
<div class = 'form-body pt-5'>
  <div class='forms text-center m-auto'>
    <h1 class = 'font-weight-bold mb-5'>アカウントの編集</h1>
      <%= form_with model: current_user, local: true do |f|%>
      <%= render 'shared/error_messages', model: f.object %>
        <div class='form'>
          <h3 class='form-label'>
            <%= f.label :ユーザー名%>
          </h3>
          <div>
            <%= f.text_field :name, class: 'form-input', placeholder: 'ユーザー名を入力', autofocus: true%>
          </div>
        </div>
        <div class='form'>
          <h3 class='form-label'>
            <%= f.label :メールアドレス%>
          </h3>
          <div>
            <%= f.email_field :email, class: 'form-input', placeholder: 'メールアドレスを入力'%>
          </div>
        </div>
        <div class='submit pt-4'>
          <%= f.submit "編集", class: 'btn btn-primary px-5 font-weight-bold'%>
        </div>
      <% end %>
  </div>
</div>
