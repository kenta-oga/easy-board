<%= render "shared/second_header" %>
<div class='form-body'>
  <div class='forms text-center m-auto'>
    <h1 class = 'font-weight-bold mb-5'>ログイン</h1>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class='form'>
        <h3 class='form-label'>
          <%= f.label :メールアドレス%>
        </h3>
        <div>
          <%= f.email_field :email, class: 'form-input', placeholder: '登録したメールアドレスを入力', autofocus: true%>
        </div>
      </div>
      <div class='form'>
        <h3 class='form-label'>
          <%= f.label :パスワード%>
        </h3>
        <div>
          <%= f.password_field :password, class: 'form-input', placeholder: '英数字混合6文字以上', autocomplete: "off"%>
        </div>
      </div>
      <div class='submit pt-4'>
        <%= f.submit "ログイン", class: 'btn btn-primary px-5 font-weight-bold'%>
      </div>
    <% end %>
  </div>
</div>
